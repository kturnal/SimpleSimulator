    <!-- Setting DataContext in XAML for better performance -->
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SimpleSimulator.Views.MainWindow"
        xmlns:viewModels="clr-namespace:SimpleSimulator.ViewModels"
        xmlns:views="clr-namespace:SimpleSimulator.Views"
        Title="Projectile Motion Simulator"
        Width="800"
        Height="600">  
    <Window.DataContext>
        <viewModels:SimulationViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- <RowDefinition Height="Auto"/> -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="Speed (m/s):" Margin="5"/>
            <TextBox Text="{Binding Speed, Mode=TwoWay}" Width="50" Margin="5"/>
            <TextBlock Text="Angle (Â°):" Margin="5"/>
            <TextBox Text="{Binding Angle, Mode=TwoWay}" Width="50" Margin="5"/>
            <TextBlock Text="Height (m):" Margin="5"/>
            <TextBox Text="{Binding Height, Mode=TwoWay}" Width="50" Margin="5"/>
            <Button x:Name="SimulateButton" Content="Simulate" Margin="10"/>
            <TextBlock Text="{Binding SimulationData}" Grid.Row="1" HorizontalAlignment="Center" Margin="10" FontSize="14" FontWeight="Bold"/>
        </StackPanel>

        <!-- Simulation Canvas with Coordinate System -->
        <Canvas x:Name="SimulationCanvas" Grid.Row="1" Background="White">
            <!-- X-Axis -->
            <Line StartPoint="0,300" EndPoint="700,300" Stroke="Black" StrokeThickness="2"/>
            <TextBlock Text="X (m)" Canvas.Left="720" Canvas.Top="295" FontWeight="Bold"/>

            <!-- Y-Axis -->
            <Line StartPoint="50,0" EndPoint="50,300" Stroke="Black" StrokeThickness="2"/>
            <TextBlock Text="Y (m)" Canvas.Left="30" Canvas.Top="-5" FontWeight="Bold"/>

            <!-- X-Axis Tick Marks -->
            <ItemsControl Items="{Binding XAxisLabels}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="viewModels:AxisLabel">
                        <TextBlock Text="{Binding Label}" 
                                   Canvas.Left="{Binding Position}" 
                                   Canvas.Top="310"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Y-Axis Tick Marks -->
            <ItemsControl Items="{Binding YAxisLabels}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="viewModels:AxisLabel">
                        <TextBlock Text="{Binding Label}" 
                                   Canvas.Left="10" 
                                   Canvas.Top="{Binding Position}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Canvas>
    </Grid>
</Window>
