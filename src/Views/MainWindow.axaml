<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SimpleSimulator.ViewModels"
        xmlns:views="clr-namespace:SimpleSimulator.Views"
        x:Class="SimpleSimulator.Views.MainWindow"
        x:CompileBindings="False"
        Title="Simple Simulator"
        Width="1024"
        Height="768">
    
    <Window.Resources>
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type vm:MainMenuViewModel}">
                <views:MainMenuView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:SimulationViewModel}">
                <views:ProjectileMotionView />
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>

    <ContentControl Content="{Binding CurrentView}"/>
</Window>
