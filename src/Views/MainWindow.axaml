<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SimpleSimulator.ViewModels"
        xmlns:views="clr-namespace:SimpleSimulator.Views"
        x:Class="SimpleSimulator.Views.MainWindow"
        Title="Simple Simulator"
        Width="1024"
        Height="768">
    
    <ContentControl Content="{Binding CurrentView}">
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type vm:MainMenuViewModel}">
                <views:MainMenuView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:SimulationViewModel}">
                <views:ProjectileMotionView/>
            </DataTemplate>
        </ContentControl.Resources>
    </ContentControl>
</Window>
